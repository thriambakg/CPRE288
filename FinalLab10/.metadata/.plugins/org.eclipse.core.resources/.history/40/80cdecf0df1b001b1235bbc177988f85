#include "ir.h"
#include "lcd.h"
#include "adc.h"
#include "ping (1).h"
#include "servo.h"
#include "timer.h"
#include "uart.h"
#include <inc/tm4c123gh6pm.h>
#include <math.h>
#include <stdlib.h>
#include "resetSimulation.h"
#include "s3-b_Scan.h"

struct data
    {
        double pingdist; //distance from cybot
        double irdist; //linear radius
    }

void s3-b_ScanInit(void)
{
    adc_init();
    servo_init();
    ping_init();
}

void cyBOT_Scan(int angle, s3-b_Scan_t* getScan)
{
    servo_move(double angle);

    irdist = adc_read();
    pingdist = ping_read(170);

}

