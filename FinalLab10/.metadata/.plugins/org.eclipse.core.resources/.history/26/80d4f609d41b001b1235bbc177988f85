#include "uart.h"
#include <inc/tm4c123gh6pm.h>
#include <math.h>
#include <stdlib.h>
#include "resetSimulation.h"

#define NUM_SAMPLES 10

int main(void) {
  lcd_init();
  timer_init();
  ping_init();
  adc_init();
  //uart_init(115200);
  //resetSimulationBoard();

  while (1)
  {
    char str[100];
    double irDistance = adc_read(100.0);
    double pingDistance = ping_read(100);
//    sprintf(str, " Distance: %.2f, %.2f \n\r", irDistance, pingDistance);
//    sprintf(str, " Distance: %d \n\r", irDistance);
//    uart_sendStr(str);

    lcd_printf("Distance: %.2f, %.2f", irDistance, pingDistance);
    timer_waitMillis(500);
    lcd_clear();
  }
}
