    resetSimulationBoard();
    while (true)
    {
        char value[] = cyBot_getByte();
        if (value == 'w')
        {
            move_forward();
        }
        else if (value == 'a')
        {
            turn_left();
        }
        else if (value == 'd')
        {
            turn_right();
        }
        else if (value == 's')
        {
            move_backward();
        }
        else
        {
            bot_stop();
        }

    }
}
